<?jelly escape-by-default='true'?>
<j:jelly xmlns:j="jelly:core">
    ${%Automatically discard results older than}
    <input type="text" id="${strategy.id}_days" name="discardResultsOlderThanDays" value="${strategy.days}" size="3" />
    ${%days}<br/>
    <script type="text/javascript">
        document.querySelector('${strategy.id}_checkbox').onchange = function(){
            document.querySelector('${strategy.id}_days').disabled = !document.querySelector('${strategy.id}_checkbox').checked;
        }
        document.querySelector('${strategy.id}_checkbox').onchange(); // For initialization
    </script>
</j:jelly>
